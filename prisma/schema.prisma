generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id          Int      @id @default(autoincrement())
  url         String   @unique
  title       String
  description String
  content     String
  summary     String?
  publishedAt DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tags        String[] @default([])
  imageUrl    String?
  author      String
  titleSlug   String?
}
